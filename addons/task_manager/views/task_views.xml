<odoo>
    <record id="view_task_tree" model="ir.ui.view">
        <field name="model">task.manager</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="assigned_to"/>
                <field name="deadline"/>
                <field name="priority"/>
                <field name="status"/>
            </tree>
        </field>
    </record>

    <record id="view_task_form" model="ir.ui.view">
        <field name="model">task.manager</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="description"/>
                        <field name="assigned_to"/>
                        <field name="deadline"/>
                        <field name="priority"/>
                        <field name="done"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
